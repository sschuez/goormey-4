<h4>Edit <%= resource_name.to_s.humanize.downcase %></h4>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="main-card">
      <h4>Log in details</h4>
      <br>
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "Leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="main-card">
      <h4>Profile</h4>
      <br>
      <div class="image-upload" data-controller="photo-preview">
          <%= f.input :avatar, input_html: { class: 'd-none', data: { action: "click->photo-preview#photo_input", photo_preview_target: "photoInput" } }, label_html: { class: 'btn-ghost btn-coral' }, label: 'ðŸ“· Upload a photo' %>
        <%= image_tag "", width: 300, class: "hidden", id: "photo-preview", data: { photo_preview_target: "photoPreview" } %>
      </div>
      <br>
      <%= f.input :first_name,
                  required: true %>
      <%= f.input :last_name,
                  required: true %>
    </div>
    
    <div class="main-card">
      <h4>Confirmation</h4>
      <br>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      
      <div class="form-actions">
        <%= f.button :submit, "Update", class: "btn btn-ghost" %>
      </div>
    
    </div>
  </div>

<% end %>
<br>

<%= link_to "Back", :back, class: "btn btn-ghost" %>
<br>
<br>

<h4>Cancel account</h4>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-ghost btn-coral" %></p>



