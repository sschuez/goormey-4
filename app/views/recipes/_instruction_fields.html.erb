<%= content_tag :div, class: "nested-fields", data: { new_record: form.object.new_record?, id: form.object.id } do %>
  <%= form.hidden_field :id %>
  <div data-nested-form-target="inputElement" class="form-inputs inline-form ingredient-show">
    <div class="handle">
      <i class="fas fa-grip-lines"></i>
    </div>

    <div class="counter"><h4></h4></div>
    <%= form.input  :description,
                    label: "Description", 
                    class: "form-input",
                    placeholder: "Describe what to do for this step",
                    input_html: { data: { controller: "textarea-autogrow" } } 
                    %>
    
    <%= link_to "#", data: { action: "click->nested-form#remove_association" } do %>
      <i class="inline-delete fas fa-trash-alt"></i>
    <% end %>
  </div>
  <%= form.hidden_field :_destroy %>
<% end %>